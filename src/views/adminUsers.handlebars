{{>nav}}
<div class="container-fluid">
  <div class="row justify-content-center align-items-center g-2">

    <div class="col-md-10">
      <table class="table table-striped table-centered mb-0">
        <thead>
          <tr>
            <th>Usuario</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each usuarios}}
          <tr>
            <td>{{last_name}} {{first_name}} </td>
            <td>{{email}}</td>
            <td><b>{{role}}</b></td>
            <td class="table-action">
              {{#if (neq role 'admin')}}
              <a href="/adminUsers/modificarRol/{{_id}}" class="action-icon"> <i class="mdi mdi-delete">Cambiar Rol</i></a> <br>
              <a href="/adminUsers/delete/{{_id}}" class="action-icon"> <i class="mdi mdi-delete">Eliminar</i></a>
              {{/if}}
               
              
            </td>
          </tr>
          {{/each}}


        </tbody>
      </table>
    </div>

  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>